    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "pytest: test_models.py",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
              "tests/test_models.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false  // 내부 라이브러리도 디버깅할 수 있게 함 (선택)
        },
        {
          "name": "Pytest: test_image_service.py",
          "type": "python",
          "request": "launch",
          "module": "pytest",
          "args": ["tests/services/test_image_service.py"],
          "console": "integratedTerminal",
          "justMyCode": false
        },
        {
          "name": "Pytest: test_history_service.py",
          "type": "python",
          "request": "launch",
          "module": "pytest",
          "args": ["tests/services/test_history_service.py"],
          "console": "integratedTerminal",
          "justMyCode": false
        }
    ]
}